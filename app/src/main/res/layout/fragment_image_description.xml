<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ImageDescriptionFragment">
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <androidx.cardview.widget.CardView
          android:id="@+id/cv_back"
          android:layout_width="30dp"
          android:layout_height="30dp"
          app:layout_constraintTop_toTopOf="parent"
          app:cardBackgroundColor="@color/black"
          app:layout_constraintStart_toStartOf="parent"
          app:cardElevation="0.1dp"
          app:cardCornerRadius="15dp"
          android:layout_margin="@dimen/margin_20">
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/padding_5"
              android:src="@drawable/ic_round_arrow_back_24"/>
      </androidx.cardview.widget.CardView>
      <ImageView
          android:id="@+id/iv_milky_way_desc"
          android:layout_width="match_parent"
          android:layout_height="230dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:transitionName="milkyImage"/>
      <com.google.android.material.progressindicator.CircularProgressIndicator
          android:id="@+id/pb"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:translationZ="90dp"
          app:layout_constraintTop_toTopOf="@+id/iv_milky_way_desc"
          app:layout_constraintEnd_toEndOf="@+id/iv_milky_way_desc"
          app:layout_constraintStart_toStartOf="@+id/iv_milky_way_desc"
          app:layout_constraintBottom_toBottomOf="@+id/iv_milky_way_desc"
          android:indeterminateOnly="true"/>
      <TextView
          android:id="@+id/tv_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/montserrat_bold"
          android:textAlignment="textStart"
          android:textColor="@color/text_black"
          android:transitionName="milkyTitle"
          tools:text="Fog Elemental - That Star over there"
          android:layout_margin="@dimen/margin_20"
          app:layout_constraintTop_toBottomOf="@+id/iv_milky_way_desc"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"/>

      <androidx.appcompat.widget.LinearLayoutCompat
          android:id="@+id/ll_center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/tv_name"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:gravity="center_vertical"
          android:layout_margin="@dimen/margin_20">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/montserrat_bold"
              android:textAlignment="textStart"
              android:textColor="@color/text_black"
              android:layout_marginEnd="@dimen/padding_5"
              android:text="@string/center"/>

          <TextView
              android:id="@+id/tv_center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/montserrat_light"
              android:textColor="@color/text_black"
              android:textSize="@dimen/text_medium"
              tools:text="Creature — Elemental" />
      </androidx.appcompat.widget.LinearLayoutCompat>
      <androidx.appcompat.widget.LinearLayoutCompat
          android:id="@+id/ll_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/ll_center"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:gravity="center_vertical"
          android:layout_marginHorizontal="@dimen/margin_20">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/montserrat_bold"
              android:textAlignment="textStart"
              android:textColor="@color/text_black"
              android:layout_marginEnd="@dimen/padding_5"
              android:text="@string/date_created"/>

          <TextView
              android:id="@+id/tv_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/montserrat_light"
              android:textColor="@color/text_black"
              android:textSize="@dimen/text_medium"
              tools:text="Creature — Elemental" />
      </androidx.appcompat.widget.LinearLayoutCompat>
      <TextView
          android:id="@+id/tv_description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/montserrat_light"
          android:textColor="@color/text_black"
          android:textSize="@dimen/text_medium"
          app:layout_constraintTop_toBottomOf="@id/ll_date"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          tools:text="@tools:sample/lorem/random"
          android:layout_marginHorizontal="@dimen/margin_20"
          android:layout_marginTop="@dimen/margin_20"
          android:layout_marginBottom="@dimen/padding_5"/>
  </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>